n = int(input('Digite um número entre 0 a 9999:'))
print('Analisando o valor {}'.format(n))
print('Unidade:{}'.format(n // 1 % 10))
print('Dezena:{}'.format(n // 10 % 10))
print('Centena:{}'.format(n // 100 % 10))
print('Milhar :{}'.format(n // 1000 % 10))

n = int(input('Digite um número entre 0 a 9999:'))
print(f'Analisando o valor {n}, pode-se observar que:\nUnidade:{n // 1 % 10}\nDezena:{n // 10 % 10}\nCentena:{n // 100 % 10}\nMiliar:{n // 1000 % 10}')
