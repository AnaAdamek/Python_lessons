num = int(input('Digite um valor:'))
print(f'Analisando o número {num} seu antecessor é {num - 1}, e seu sucessor é {num + 1}!')

n = int(input('Digite um número'))
a = n - 1
s = n + 1
print('Analisando o valor {}, seu antecessor é {} e o seu sucessor é {}'.format(n, a, s))

n = int(input('Digite um valor:'))
print('Analisando o valor {}, seu antecessor é {}, e seu sucessor é {}!'.format(n, (n - 1), (n + 1)))
